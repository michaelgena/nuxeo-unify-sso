<?xml version="1.0"?>

<component name="org.nuxeo.ecm.platform.login.unify.sso">
  <require>org.nuxeo.ecm.platform.ui.web.auth.defaultConfig</require>
   <extension
      target="org.nuxeo.ecm.platform.ui.web.auth.service.PluggableAuthenticationService"
      point="authenticators">
      <authenticationPlugin
              name="GA_PORTAL_AUTH"
              enabled="true"
              class="org.nuxeo.ecm.platform.ui.web.auth.portal.GAPortalAuthenticator">
       <loginModulePlugin>Trusting_LM</loginModulePlugin>
       <parameters>
       	 <parameter name="url">https://app-enterprise.unify.com/GAPortal/SimpleSSO</parameter>
       	 <parameter name="nuxeo_url">http://localhost:8080/nuxeo</parameter>
       </parameters>
      </authenticationPlugin>
  </extension>
  
  <extension
      target="org.nuxeo.ecm.platform.ui.web.auth.service.PluggableAuthenticationService"
      point="authenticators">
      <authenticationPlugin
              name="GA_REST_AUTH"
              enabled="true"
              class="org.nuxeo.ecm.platform.ui.web.auth.portal.RESTAuthenticator">
       <loginModulePlugin>Trusting_LM</loginModulePlugin>
       <parameters>
       	 <parameter name="url">https://app-enterprise.unify.com/GAPortal/SimpleSSO</parameter>
       	 <parameter name="nuxeo_url">http://localhost:8080/nuxeo</parameter>
       </parameters>
      </authenticationPlugin>
  </extension>

   <!-- Include GAPortal Auth into authentication chain -->
    <extension
      target="org.nuxeo.ecm.platform.ui.web.auth.service.PluggableAuthenticationService"
      point="chain">
    <authenticationChain>
      <plugins>
        <!--  Keep basic Auth at top of Auth chain to support RSS access via BasicAuth -->
        <plugin>BASIC_AUTH</plugin>
        <plugin>GA_PORTAL_AUTH</plugin>
        <plugin>FORM_AUTH</plugin>
      </plugins>
    </authenticationChain>
  </extension>
  
  <extension point="specificChains" target="org.nuxeo.ecm.platform.ui.web.auth.service.PluggableAuthenticationService">
    <specificAuthenticationChain name="RestAPI">
        <urlPatterns>
          <url>(.*)/api/v1/.*</url>
          <url>(.*)/front/.*</url>
        </urlPatterns>
        <replacementChain>
             <plugin>GA_REST_AUTH</plugin>
        </replacementChain>
    </specificAuthenticationChain>
  </extension>
</component>
